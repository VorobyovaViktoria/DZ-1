 public class algoritms {
 
 //Собрать ребенка на прогулку
    public static void algoritmПрогулка() {
        if ( пора года == осень ) {
              1.Взять ребенка
              2.Одеть ребенку куртку
              3.Одеть ребенку штаны
              4.Одеть ребенку шапку
        
             if  (температура >= 10)  {
                  Одеть ботинки
                  } else if ( температура <= 0) {
                 Одеть сапоги
                 } 
         } else {
         Остаться дома
         }
 }

//Собраться на работу
public static void algoritmРабота() {
        if ( день недели == понедельник ) {
              1.Проснуться
              2.Умыться
              3.Накраситься
              4.Поесть
        
             if  (время >= 6.45)  {
                  Выбежать из дома бегом
                  } else if ( время <= 6.45) {
                 Посидеть в коридоре
                 } 
         } else {
         Никуда не идти, остаться работать дома.
         }
 }
 
